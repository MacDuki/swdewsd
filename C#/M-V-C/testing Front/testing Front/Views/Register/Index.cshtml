
@{
    ViewData["Title"] = "Register Page";
	string nombre = "";
	string apellido = "";
	string email = "";
	string contrasenia = "";

}
<div class="container d-flex align-items-center justify-content-center ">
    <div class="card p-4 shadow contenedor" style="max-width: 400px; width: 100%;">
        <h1 class="text-center mb-4">Register</h1>
        <form asp-action="NewClientRegister" method="post">
            <div class="form-group p-1">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control inputText" id="nombre" name="nombre" placeholder="Enter first name" required>
            </div>
            <div class="form-group p-1">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control inputText" id="apellido" name="apellido" placeholder="Enter last name" required>
            </div>
            <div class="form-group p-1">
                <label for="email">Email address</label>
                <input type="email" class="form-control inputText" id="email" name="email" placeholder="Enter email" required>
            </div>
            <div class="form-group p-1">
                <label for="password">Password</label>
                <input type="password" class="form-control inputText" id="contrasenia" name="contrasenia" placeholder="Enter password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-2">Register</button>
        </form>
    </div>
</div>
