
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Obligatorio 2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/testing_Front.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm text-center navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">Obligatorio 2</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-content-center">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("Usuario") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Login <img src="~/Assets/login.png" /></a>
                                
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Register" asp-action="Index">Register <img src="~/Assets/register.png" /></a>
                                
                            </li>
                        }
                        else
                        {
                            

                            @if (Context.Session.GetString("Rol") == "Cliente")
                            {
                   
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomeClient">Inicio <img src="~/Assets/home.png" class="homeIcon" /></a>
                                </li>
                     
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="CargarSaldo" asp-action="Index">Agregar saldo <img src="~/Assets/money.png"  /></a>
                                </li>
                  
                            <div class="userDataContainer">
                                <li>Bienvenido @Context.Session.GetString("UserName")</li>
                                <li>Saldo actual: @Context.Session.GetString("Money")$</li>
                            </div>
                   
                            }
                            else if (Context.Session.GetString("Rol") == "Administrador")
                            {
                                <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomeAdm">Inicio  <img src="~/Assets/home.png" /></a>
                                </li>
                            }


                    <li class="nav-item liLogOut">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Salir del sistema <img src="~/Assets/logout.png" /></a>

                    </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div >
                <p>Pedro Wattimo</p>
                <p>Nro: 338849</p>
            </div>
            <div>
                <p>Axel Mayer</p>
                <p>Nro: 284332</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
